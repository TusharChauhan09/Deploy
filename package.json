{
   "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "bunx dotenv-cli -e packages/db/.env -- bunx turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd packages/db && bunx prisma generate && cd ../..",
    "start:web": "cd apps/web && bun run start",
    "start:backend": "cd apps/backend && bun run start",
    "start:ws": "cd apps/ws && bun run start"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "2.5.5",
    "typescript": "5.8.3",
    "dotenv-cli": "^7.4.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.42",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
